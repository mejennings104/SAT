@model IEnumerable<SAT.DATA.EF.Models.Course>

@{
    ViewData["Title"] = "Index";
}
<div class="crumbs-area">
    <div class="container">
        <div class="crumb-content">
            <h4 class="crumb-title"><span>Courses</span></h4>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curriculum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curriculum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Scheduler"))
                        {
                        <a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a> <span>|</span>
                        <a asp-action="Details" asp-route-id="@item.CourseId">Details</a> <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>

                    }

                </td>
            </tr>
        }
    </tbody>
</table>
