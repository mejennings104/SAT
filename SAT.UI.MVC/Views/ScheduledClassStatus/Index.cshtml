@model IEnumerable<SAT.DATA.EF.Models.ScheduledClassStatus>

@{
    ViewData["Title"] = "Index";
}
<div class="crumbs-area">
    <div class="container">
        <div class="crumb-content">
            <h4 class="crumb-title"><span>Scheduled Class </span>Status</h4>
        </div>
    </div>
</div>
@if (User.IsInRole("Admin"))
{    
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scsname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Scsname)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Scsid">Edit</a> <span>|</span>
                    <a asp-action="Details" asp-route-id="@item.Scsid">Details</a> <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Scsid">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
